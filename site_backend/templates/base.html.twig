            </div>
        </aside>
        <!-- /.control-sidebar -->
    {% endif %}

    <!-- Main Footer -->
    <footer style="position: relative" class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            Todo lo que buscas.
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2021 <a href="{{ path('index') }}">tienda.vc-entrega.com</a>.</strong>
    </footer>
</div>
